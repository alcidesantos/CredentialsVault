<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <!-- Nome -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/def_cred_hint_nome">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Username -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/def_cred_hint_username">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/def_cred_hint_password"
            app:endIconMode="password_toggle">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textViewDicaLongClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-18dp"
            android:layout_marginBottom="25dp"
            android:text="@string/def_cred_dica_longclick_password"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:visibility="gone" />

        <!-- Botão Gerar Password -->
        <Button
            android:id="@+id/buttonGerarPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/def_cred_btn_gerar_password"
            android:textAllCaps="false"
            android:layout_marginBottom="24dp" />

        <!-- Configuração da Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- SeekBar: Tamanho -->
        <TextView
            android:id="@+id/textViewTamanho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarTamanho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="4"
            android:max="30"
            android:progress="12"
            android:layout_marginBottom="16dp" />

        <!-- CheckBoxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <CheckBox
                android:id="@+id/checkBoxMaiusculas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/def_cred_chk_maiusculas" />

            <CheckBox
                android:id="@+id/checkBoxMinusculas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/def_cred_chk_minusculas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/checkBoxDigitos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/def_cred_chk_digitos" />

            <CheckBox
                android:id="@+id/checkBoxEspeciais"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/def_cred_chk_especiais" />

        </LinearLayout>

        <!-- EditText: Caracteres especiais -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="@string/def_cred_chk_especiais">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEspeciais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="!@#$%^&amp;*" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botão Apagar (só visível ao editar) -->
        <Button
            android:id="@+id/buttonApagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/def_cred_btn_apagar"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />

        <!-- Botões (sempre visíveis no fundo do scroll) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/def_cred_btn_cancelar"
                android:textAllCaps="false"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/buttonGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/def_cred_btn_guardar"
                android:textAllCaps="false"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>